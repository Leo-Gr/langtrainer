= link_to t(:app_name), root_path, :class => 'brand'
ul.nav
  - if logged_in?
    li = link_to 'Logout', logout_path, :method=>'delete'
  - else
    li = link_to 'Login', login_path
  - if logged_in?
    li = link_to 'Edit account', edit_user_path(current_user)
    - if current_user.has_role? :admin
      li = link_to 'Admin', users_path
  - else
    li = link_to 'Sign up', signup_path
