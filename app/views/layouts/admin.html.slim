doctype 5
html
  head
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title = content_for?(:title) ? yield(:title) : t(:app_name)
    meta name="description" content="#{content_for?(:description) ? yield(:description) : t(:app_name)}"
    = stylesheet_link_tag "admin", :media => "all"
    = javascript_include_tag "application"
    = yield :load_controller_javascript
    = include_gon
    = display_meta_tags site: t(:app_name), separator: 'â€“', reverse: true
    = csrf_meta_tags
    = yield(:head)
  body class="#{controller_name} #{action_name}"
    = render 'layouts/admin/topbar'
    #main.clearfix role="main"
      .container#contentwrapper
        .content
          .row
           .span12
             = render 'layouts/messages'
             = yield
      .sidebar
        .sidebar_inner
          #side_accordion.accordion
            = render partial: 'layouts/sidebar/group',
                     collection: Langtrainer.admin_nav_groups,
                     as: :group
          footer
